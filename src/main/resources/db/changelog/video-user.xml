<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20260131-create-video-user-table" author="libre">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="video_user" schemaName="public"/>
            </not>
        </preConditions>
        <createTable tableName="video_user" schemaName="public">
            <column name="username" type="varchar(64)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="password" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20260131-insert-default-admin-user" author="libre">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM video_user WHERE username = 'admin'
            </sqlCheck>
        </preConditions>
        <insert tableName="video_user">
            <column name="username" value="admin"/>
            <column name="password" value="admin"/>
        </insert>
    </changeSet>

</databaseChangeLog>
